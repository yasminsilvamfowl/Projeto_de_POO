import java.util.Vector;

public class Universidade {
  private Vector<CursoEscolhido> cursos;
  
  private String nome;
  private String estado;
  private int vagas;
  private int AC;
  private int EP;
  private int PPIEP;
  private int PPIRF;
  private int PcDEP;
  private int PcDRF;
  private int RF;
  
  public Universidade() {
    this.cursos = new Vector<>();
  }
  
  public void universidadeDados (String nome, String estado, int vagas){
    this.nome = nome;
    this.estado = estado;
    this.vagas = vagas;
    this.AC = (50*vagas)/100;
    this.EP = (10*vagas)/100;
    this.PPIEP = (13*vagas)/100;
    this.PPIRF = (13*vagas)/100;
    this.PcDEP = (2*vagas)/100;
    this.PcDRF = (2*vagas)/100;
    this.RF = (10*vagas)/100;
  }

  //CursoExiste();
  public CursoEscolhido procurar(String nome){
    if (cursos.size() <= 0) {
      return null;
    }
    
    for(int i = 0; i < cursos.size(); i++) {
      if(cursos.get(i).getNome().equals(nome)) {        
        return cursos.get(i);
      }
    }
    return null;
  }
  
  public void cadastrar(CursoEscolhido curso){
    if(procurar(curso.getNome())==null){
      cursos.add(curso);
    }
  }

  public void remover(CursoEscolhido curso){
    if(procurar(curso.getNome())!=null){
      cursos.remove(curso);
    }
  }

  public void adicionarAluno(String nome, Aluno aluno){
    CursoEscolhido curso = procurar(nome);
    if(curso!= null){
      curso.adicionarAluno(aluno);
    }
    else{
      System.out.println("Curso nÃ£o encontrado.");
    }
  }

  public String getNome() {
    return this.nome;
  }
}
